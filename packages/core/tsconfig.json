{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "declaration": true,
    "types": [
      "node",
      "reflect-metadata",
      "jest"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
    "src/application/application.tsn/application.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}